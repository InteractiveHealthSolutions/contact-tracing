<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:id="@+id/index_form_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4.5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="@dimen/normal_padding"
            >


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_man"
                />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="Peter Jack"

            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/v_large_text_size"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact ID : "
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                />

            <TextView
                android:id="@+id/contact_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12913381202"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/medium_text_size"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TB Number/ Index Case ID : "
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                />

            <TextView
                android:id="@+id/index_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="129133"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/medium_text_size"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Index Case Name : "
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                />

            <TextView
                android:id="@+id/index_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacob"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/medium_text_size"
                />
        </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/promt_contact_found" />

            <RadioGroup
                android:id="@+id/contact_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No" />


            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <EditText

            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:enabled="false"
            android:clickable="false"
            android:hint="Date contact screened"
            android:inputType="date"
            />

        <TextView
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Calendar"
            android:drawableTop="@drawable/schedule"


        />

         </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_cough"
            android:layout_marginTop="7dp"
                />

        <RadioGroup
            android:id="@+id/cough"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yes"
                />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No" />


        </RadioGroup>

<LinearLayout
    android:id="@+id/cough_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/prompt_cough_duration"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/prompt_cough_blood"
            android:layout_marginTop="4dp"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/cough_duration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />




        <RadioGroup
            android:id="@+id/cough_blood"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:orientation="horizontal"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yes"
                />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No" />


        </RadioGroup>


        </LinearLayout>
</LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_fever"
            android:layout_marginTop="7dp"
            />

        <RadioGroup
            android:id="@+id/fever"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yes"
                />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No" />


        </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/fever_duration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/prompt_fever_duration"
                        android:inputType="numberDecimal"
                        android:digits="0123456789"
                        android:maxLength="2" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/weight_loss_adult_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/promt_weight_loss_adult"
                android:gravity="center_vertical"

                />

            <RadioGroup
                android:id="@+id/weight_loss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No" />
            </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
             >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prompt_sweat"
                android:gravity="center_vertical"

                />

            <RadioGroup
                android:id="@+id/night_sweat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No" />


            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/weight_loss_layout"
            android:padding="7dp"  >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:text="@string/prompt_weight_loss_child"
                android:gravity="center_vertical"
                />

            <RadioGroup
                android:id="@+id/weight_loss_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"

                >

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weight_loss_period_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_cough_duration"
            android:layout_marginTop="4dp"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/weightloss_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
              android:padding="7dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prompt_swelling"
                android:gravity="center_vertical"
                />

            <RadioGroup
                android:id="@+id/swelling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_tb_before"
                android:gravity="center_vertical"
                />

            <RadioGroup
                android:id="@+id/tb_before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    />
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"  >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_hiv_before"
                android:gravity="center_vertical"
                />

            <RadioGroup
                android:id="@+id/hiv_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    />
            </RadioGroup>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_hiv_result"
            android:layout_marginTop="4dp"
            />

        <RadioGroup
            android:id="@+id/hiv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Positive"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Negitive"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Tested"
                />
        </RadioGroup>
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/prompt_sym_screen"
                    android:gravity="center_vertical"
                    />
                <RadioGroup
                    android:id="@+id/symptom_screen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Well"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Symptomatic"
                        />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_contact_refered"
                android:gravity="center_vertical"
                />

            <RadioGroup
                android:id="@+id/contact_referred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    />
            </RadioGroup>
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:id="@+id/layout_referral_reason"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/prompt_referral_reason"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                    android:id="@+id/referral_reason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >
                    <CheckBox
                        android:id="@+id/ipt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="IPT"
                        />

                    <CheckBox
                        android:id="@+id/further_tb_assessment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Further TB Assessment"
                        />
                    <CheckBox
                        android:id="@+id/hiv_testing"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="HIV Testing"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/save_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="@string/save"
        />


</LinearLayout>
</FrameLayout>
</layout>